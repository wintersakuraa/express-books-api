  "scripts": {
    "start:dev": "rimraf dist && tsc-watch --onSuccess 'yarn watch:server'",
    "watch:server": "nodemon 'src/app.ts' --watch './src'",
    "build": "npx tsc",
    "start": "node dist/src/app.js",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "sequelize-cli": "sequelize-cli",
    "db:migrate": "yarn sequelize-cli db:migrate",
    "migration:generate": "sh -c 'sequelize-cli migration:generate --name ${0}'",
    "seed:generate": "sh -c 'sequelize-cli seed:generate --name ${0}'",
    "db:seed": "sequelize-cli db:seed:all"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
