    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^5.0.5",
    "sequelize-cli": "^6.6.2",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.1.3"
  }
}
